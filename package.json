{
  "name": "chsplit",
  "author": "Tornith",
  "version": "0.2.1",
  "description": "CHSplit",
  "private": true,
  "dependencies": {
    "@welldone-software/why-did-you-render": "^3.3.9",
    "electron-is-dev": "^1.1.0",
    "electron-unhandled": "latest",
    "electron-window-state": "^5.0.3",
    "get-port": "^5.1.1",
    "js-yaml": "^3.13.1",
    "open": "^7.0.0",
    "ps-tree": "^1.2.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.2.0",
    "request-promise": "^4.2.5",
    "serialize-javascript": "2.1.1",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "electron-builder build --win portable",
    "preelectron-pack": "yarn build",
    "py-build": "pyinstaller ./pysrc/CHSplit.py -y --hidden-import engineio.async_drivers.gevent --noconsole --onefile --name CHSplit --icon ./public/favicon.ico --distpath ./pydist --workpath ./pybuild",
    "build-dist": "yarn py-build && yarn electron-pack"
  },
  "main": "public/electron.js",
  "build": {
    "appId": "com.tornith.chsplit",
    "productName": "CHSplit",
    "buildVersion": "0.2.1",
    "files": [
      "pydist/**/*",
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "nsisWeb": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true,
    "runAfterFinish": false
  },
  "homepage": "./",
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.0.0",
    "electron": "^7.1.1",
    "electron-builder": "^21.2.0",
    "wait-on": "^3.3.0"
  }
}
